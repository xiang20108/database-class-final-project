<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Product</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container" style="margin-top: 50px">
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
              <a class="nav-link">Product</a>
            </li>
            <li class="nav-pill ml-auto">
              <a class="nav-link active" href="/apiProducts/add">Add Product</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <% if(data.length) { %>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Brand</th>
                <th scope="col">Price</th>
                <th scope="col">Remote_url</th>
                <th scope="col">Local_url</th>
                <th width="200px">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i< data.length; i++) { %>
              <tr>
                <th scope="row"><%= (i+1) %></th>
                <td><%= data[i].name%></td>
                <td><%= data[i].category%></td>
                <td><%= data[i].brand%></td>
                <td><%= data[i].price%></td>
                <td><%= data[i].remote_url%></td>
                <td><%= data[i].local_url%></td>
                <td>
                  <a
                    class="btn btn-success edit"
                    href="/apiProducts/edit/<%=data[i].id%>"
                    >Edit</a
                  >
                  <a
                    class="btn btn-danger delete"
                    onclick="return alert('Are You sure?')"
                    href="/apiProducts/delete/<%=data[i].id%>"
                    >Delete</a
                  >
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>

          <!-- if result is empty -->
          <% if(!data.length) { %>
          <p class="text-center">No Product found!</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
